{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },

  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-4c7a3924",
      "instance_type": "t1.micro",
      "ssh_username": "ubuntu",
      "ami_name": "foobarium-blog {{timestamp}}"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": ["sleep 15"]
    },

    {
      "type": "file",
      "source": "build/site.tar.gz",
      "destination": "/tmp/site.tar.gz"
    },

    {
      "type": "file",
      "source": "deploy/foobarium.nginx.conf",
      "destination": "/tmp/foobarium.nginx.conf"
    },

    {
      "type": "shell",
      "script": "deploy/setup.sh"
    }
  ]
}
